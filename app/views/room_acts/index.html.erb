<p id="notice"><%= notice %></p>

<h1>Room Acts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Desc</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_acts.each do |room_act| %>
      <tr>
        <td><%= room_act.Name %></td>
        <td><%= room_act.Amount %></td>
        <td><%= room_act.Desc %></td>
        <td><%= room_act.Time %></td>
        <td><%= link_to 'Show', room_act %></td>
        <td><%= link_to 'Edit', edit_room_act_path(room_act) %></td>
        <td><%= link_to 'Destroy', room_act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

